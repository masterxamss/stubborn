{# templates/security/login.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <section class="container flex-grow-1 mt-3 mb-3 d-flex flex-column align-items-center justify-content-center">
        <div> 
            {% include 'partials/flash_messages.html.twig' %}
        </div>
        <div class="mt-3 border border-secondary border-opacity-50 p-3 bg-card-white bg-opacity-25" style="width: 400px;"> 
            <h1 class="h3 mb-3 fw-normal">Se connecter</h1>
            <hr>
            {% if error %}
                <div class="alert alert-danger">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}
            <form action="{{ path('app_login') }}" method="post">
                <div class="form-group mb-3">
                    <label for="username" class="form-label">Email</label>
                    <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required />
                </div>
                <div class="form-group mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input class="form-control" type="password" id="password" name="_password" required />
                </div>
                <div>
                    <button type="submit" class="btn btn-outline-primary rounded-pill mt-3">Se Connecter</button>
                </div>
             </form>
            <a href="" class="btn btn-link mt-3 p-0">Mot de passe oublie ?</a>
            <hr>
            <div class="col-12 d-flex flex-row justify-content-evenly">
                <p class="mt-3">Pas encore inscrit ?</p>
                <a href="{{ path('app_register') }}" class="btn btn-link p-0 mt-3">Cr√©er un compte</a>
            </div>
        </div>
    </section>
{% endblock %}

