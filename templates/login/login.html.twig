{# templates/security/login.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <div class="container mt-5 w-25 flex-grow-1">
        {% for message in app.session.flashbag.get('error') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}

        {% for message in app.session.flashbag.get('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}

        <h1 class="h3 mb-3 fw-normal">Se connecter</h1>
        <hr>
        {% if error %}
            <div class="alert alert-danger">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}
        <form action="{{ path('app_login') }}" method="post">
            <div class="form-group mb-3">
                <label for="username" class="form-label">Email</label>
                <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required />
            </div>

            <div class="form-group mb-3">
                <label for="password" class="form-label">Password</label>
                <input class="form-control" type="password" id="password" name="_password" required />
            </div>

            <div>
                <button type="submit" class="btn btn-primary">Se Connecter</button>
            </div>
            <a href="" class="btn btn-link mt-3 ps-0">Mot de passe oublie ?</a>
            <hr>
            <p class="mt-3">Pas encore inscrit ? <a href="{{ path('app_register') }}" class="btn btn-link">Cr√©er un compte</a></p>
        </form>
    </div>




    


{% endblock %}

