{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <main class="container flex-grow-1">

        <div class="jumbotron jumbotron-fluid">
            <div class="container">
                <h1 class="display-4">Fluid jumbotron</h1>
                <p class="lead">This is a modified jumbotron that occupies the entire horizontal space of its parent.</p>
            </div>
        </div>

        <div class="row row-cols-1 row-cols-md-3 g-4 mt-5 mb-5">
            {% for product in products %}
                <div class="col">
                    <div class="card h-100">
                        <img src="{{ product.image ? asset('uploads/' ~ product.image) : asset('images/load_placeholder.png') }}" class="card-img-top" alt="Product image">
                        <div class="card-footer d-flex justify-content-between p-3">
                            <div>
                                <h5 class="card-title">{{ product.name }}</h5>
                                <p class="card-text">Prix : {{ product.price }} â‚¬</p>
                            </div>
                            {% if app.user %}   
                                <div class="d-flex flex-column justify-content-center">
                                    <a href="/product/{{ product.id }}" class="btn btn-primary">Voir</a>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </main>
    
{% endblock %}
