<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body class="d-flex flex-column min-vh-100">
        <header class="container d-flex flex-wrap justify-content-center align-items-center py-3 mb-4 border-bottom">
            <a href="{{ path('app_index') }}" class="d-flex flex-column align-items-left mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none">
                <img src="{{ asset('images/Logo.png') }}" width="150" alt="Logo Stubborn">
                <span class="fs-6">Don't compromise on your look</span>
            </a>

            <ul class="nav nav-pills">
                <li class="nav-item"><a href="{{ path('app_index') }}" class="nav-link active" aria-current="page">Accueil</a></li>
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <li class="nav-item"><a href="" class="nav-link">Boutique</a></li>
                    <li class="nav-item"><a href="" class="nav-link">Panier</a></li>
                    <li class="nav-item ps-5"><a href="\logout" class="nav-link">Se d√©connecter</a></li>
                {% else %}
                    <li class="nav-item"><a href="{{ path('app_register') }}" class="nav-link">S'inscrire</a></li>
                    <li class="nav-item"><a href="{{ path('app_login') }}" class="nav-link">Se connecter</a></li>    
                {% endif %}
            </ul>
        </header>

        
    
        {% block body %}{% endblock %}
        <footer class="container d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
            <div class="col-md-4 d-flex align-items-center flex-column w-100">
                <address class="d-flex align-items-center flex-column">
                    <p>Stubborn</p>
                    <p>Piccadilly Circus, London W1J 0DA, Royaume-Uni</p>
                    <a href="mailto:stubborn@blabla.com">stubborn@blabla.com</a>
                </address>
                <span class="mb-3 mb-md-0 text-body-secondary">&copy; 2024 Stubborn, All rights reserved</span>
            </div>
        </footer>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    </body>
</html>
